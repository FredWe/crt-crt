.page(data-page="swiper-scrollbar")
  .navbar
    .navbar-inner
      .left.sliding
        a(href="swiper.html").back.link
          i.icon.icon-back
          span Back
      .center Swiper With Scrollbar
      .right
        a(href="#").open-panel.link.icon-only
          i.icon.icon-bars
  .page-content
    .swiper-container.swiper-init.ks-demo-slider(data-scrollbar=".swiper-scrollbar")
      .swiper-pagination
      .swiper-scrollbar
      .swiper-wrapper
        - for (var i = 1; i < 11; i++)
          .swiper-slide Slide #{i}